{
  "name": "aparty",
  "version": "0.1.0",
  "description": "A silent focus room - real-time presence sharing without chat",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "start:server": "npm run start --workspace=@aparty/server",
    "dev:server": "npm run dev --workspace=@aparty/server",
    "dev:client": "npm run dev --workspace=@aparty/client"
  },
  "keywords": [
    "websocket",
    "presence",
    "focus",
    "productivity"
  ],
  "author": "minseon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/let-sunny/aparty.git"
  },
  "bugs": {
